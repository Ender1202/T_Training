@model HandsOnMVCUsingModels.Models.Product
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div> 
		<form action="Add" method="post">
			<table>
				<tr>
					<td>Id</td>
					<td>
						<input type="number" name="Id" />
					</td>
				</tr>
				<tr>
					<td>Name</td>
					<td>
						<input type="text" name="Name" />
					</td>
				</tr>
				<tr>
					<td>Description</td>
					<td>
						<input type="text" name="Description" />
					</td>
				</tr>
				<tr>
					<td>Price</td>
					<td>
						<input type="number" name="Price" />
					</td>
				</tr>
				<tr>
					<td colspan="2">
						<input type="submit" value="Add" />
					</td>
				</tr>
			</table>
		</form>
    </div>
</body>
</html>
