@model HandsOnMVCUsingModels.Models.Product
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Create</title>
</head>
<body>
	<div>
		<form action="Edit" method="post">
			<table>
				<tr>
					<td>Id</td>
					<td>
						@Html.TextBoxFor(m => m.Id, null, new {ReadOnly="ReadOnly"})
					</td>
				</tr>
				<tr>
					<td>Name</td>
					<td>
						@Html.TextBoxFor(m => m.Name,null, new { ReadOnly = "ReadOnly" })
					</td>
				</tr>
				<tr>
					<td>Description</td>
					<td>
						@Html.TextBoxFor(m => m.Description, null, new { ReadOnly = "ReadOnly" })
					</td>
				</tr>
				<tr>
					<td>Price</td>
					<td>
						@Html.TextBox("Price")
					</td>
				</tr>
				<tr>
					<td colspan="2">
						<input type="submit" value="Edit" />
					</td>
				</tr>
			</table>
		</form>
	</div>
</body>
</html>
